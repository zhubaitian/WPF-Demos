<Window x:Class="DockPanelLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanelLayout"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Width="Auto" Height="Auto" LastChildFill="false">

            <Button DockPanel.Dock="Left" Content="1"  />

            <Button DockPanel.Dock="Top" Content="2"  />

            <Button DockPanel.Dock="Right" Content="3" />

            <Button DockPanel.Dock="Bottom"  Content="4(LastChildFill = false)" />


        </DockPanel>
    </Grid>
</Window>
